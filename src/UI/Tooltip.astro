---
// Tooltip.astro
// Tooltip minimalista para controles
const { text } = Astro.props;
---

<span
  class="absolute -top-7 left-1/2 -translate-x-1/2 bg-black text-white text-[10px] rounded px-2 py-1 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none z-10 whitespace-nowrap shadow-lg"
>
  {text}
</span>
